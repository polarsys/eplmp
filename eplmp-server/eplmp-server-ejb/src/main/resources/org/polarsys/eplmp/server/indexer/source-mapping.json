{
  "_default_": {
    "_all": {
      "enabled": "true"
    },
    "dynamic_templates": [
      {
        "content_string": {
          "match": "content",
          "match_mapping_type": "string",
          "mapping": {
            "type": "string",
            "index": "analyzed"
          }
        }
      },
      {
        "default_string": {
          "match": "*",
          "match_mapping_type": "string",
          "unmatch": "attr_*",
          "mapping": {
            "type": "string",
            "analyzer": "analyzer_case_insensitive"
          }
        }
      },
      {
        "attributes": {
          "match": "attr_*",
          "match_mapping_type": "string",
          "mapping": {
            "type": "keyword"
          }
        }
      }
    ]
  }
}
